extends ../layout

block content
  // Breadcrumbs
  ol.breadcrumb
    li.breadcrumb-item
      a(href='index.html') Dashboard
    li.breadcrumb-item.active= title
  .row
    .col-12
      h1= title

      table
        thead
          tr
            th Value
            th Color
        tbody
          each val in data
            tr
              td #{val.value}
              td
                span(style={display:  'inline-block', width: '20px', height: '20px', background: val.color})